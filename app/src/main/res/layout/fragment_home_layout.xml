<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/window_bg" >

    <include
        android:id="@+id/titleLayout"
        layout="@layout/title_bar_layout" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/titleLayout" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/bannerWidget"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="fitXY"
                android:src="@drawable/icon_home_title" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/comm_margin"
                android:background="@drawable/shape_rect_write_bg"
                android:orientation="horizontal"
                android:paddingBottom="12dp"
                android:paddingTop="12dp" >

                <ImageView
                    android:id="@+id/lijidaikuanImg"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="2"
                    android:src="@drawable/icon_jk" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:orientation="vertical"
                    android:gravity="center_horizontal"
                    android:layout_marginRight="@dimen/comm_margin"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="出售租赁"
                        android:textSize="30dp"
                        android:textColor="#2ea832"
                        />


                    <Button
                        android:id="@+id/lijidkImg"
                        android:layout_width="100dp"
                        android:layout_height="30dp"
                        android:layout_marginTop="12dp"
                        android:background="@drawable/button_lijidaikuan_bg"
                        android:text="立即申请"
                        android:textColor="#fff" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/comm_margin"
                android:background="@drawable/shape_rect_write_bg"
                android:orientation="horizontal"
                android:paddingBottom="12dp"
                android:paddingTop="12dp" >

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/icon_huankuan" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:orientation="vertical"
                    android:gravity="center_horizontal"
                    android:layout_marginRight="@dimen/comm_margin"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="回购手机"
                        android:textSize="30dp"
                        android:textColor="#8b63b9"
                        />

                    <Button
                        android:id="@+id/nowRefundImg"
                        android:layout_width="100dp"
                        android:layout_height="30dp"
                        android:layout_marginTop="12dp"
                        android:background="@drawable/button_lijihuankuan_bg"
                        android:text="立即回购"
                        android:textColor="#fff" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>