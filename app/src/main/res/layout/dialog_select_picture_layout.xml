<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#7a000000">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="@dimen/comm_margin"
        android:layout_marginRight="@dimen/comm_margin"
        android:background="@drawable/shape_rect_write_bg"
        android:orientation="vertical">

        <TextView
            android:id="@+id/slTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/font_color"
            android:textSize="16sp"
            android:gravity="center"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp"
            android:text="示例" />

        <View
            android:id="@+id/slView"
            android:layout_width="match_parent"
            android:layout_height="0.6dp"
            android:layout_marginBottom="12dp"
            android:background="#e6e6e6"/>

            <ImageView
                android:id="@+id/slImg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="center"
                />
        <Button
            android:id="@+id/cameraBtn"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:layout_above="@id/registerBtn"
            android:layout_marginBottom="18dp"
            android:layout_marginLeft="@dimen/comm_margin"
            android:layout_marginRight="@dimen/comm_margin"
            android:layout_marginTop="18dp"
            android:background="@drawable/button_bg"
            android:text="拍照"
            android:textColor="#fff"
            android:textSize="16sp" />

        <Button
            android:id="@+id/picBtn"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:layout_above="@id/registerBtn"
            android:layout_marginBottom="18dp"
            android:layout_marginLeft="@dimen/comm_margin"
            android:layout_marginRight="@dimen/comm_margin"
            android:background="@drawable/button_bg"
            android:text="取消"
            android:textColor="#fff"
            android:textSize="16sp" />
    </LinearLayout>

</RelativeLayout>