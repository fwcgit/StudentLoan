<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/window_bg"
    android:fitsSystemWindows="true">

    <include
        android:id="@+id/titleLayout"
        layout="@layout/title_bar_layout" />

    <LinearLayout
        android:id="@+id/showLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/titleLayout"
        android:background="#ffffff"
        android:orientation="vertical">



        <EditText
            android:id="@+id/oldPwdEt"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="#00ffffff"
            android:hint="请输入旧密码"
            android:inputType="textPassword"
            android:textColorHint="@color/font_hint_color"
            android:paddingLeft="@dimen/comm_margin"
            android:password="true"
            android:textColor="@color/font_color"
            android:textSize="14sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.6dp"
            android:layout_marginLeft="@dimen/comm_margin"
            android:layout_marginStart="@dimen/comm_margin"
            android:background="#cccccc" />

        <EditText
            android:id="@+id/newPwdEt"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="#00ffffff"
            android:hint="请输入新密码"
            android:inputType="textPassword"
            android:paddingLeft="@dimen/comm_margin"
            android:password="true"
            android:textColor="@color/font_color"
            android:textColorHint="@color/font_hint_color"
            android:textSize="14sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.6dp"
            android:layout_marginLeft="@dimen/comm_margin"
            android:layout_marginStart="@dimen/comm_margin"
            android:background="#cccccc" />

        <EditText
            android:id="@+id/newRepeatPwdEt"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="#00ffffff"
            android:hint="请重复新密码"
            android:inputType="textPassword"
            android:paddingLeft="@dimen/comm_margin"
            android:textColorHint="@color/font_hint_color"
            android:password="true"
            android:textColor="@color/font_color"
            android:textSize="14sp" />


    </LinearLayout>

    <Button
        android:id="@+id/confirmBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/showLayout"
        android:layout_marginLeft="@dimen/btn_margin"
        android:layout_marginRight="@dimen/btn_margin"
        android:layout_marginTop="200dp"
        android:background="@drawable/select_button_pic_bg"
        android:text="确定"
        android:textColor="#fff"
        android:textSize="16sp" />

</RelativeLayout>