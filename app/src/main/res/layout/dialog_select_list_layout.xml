<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#7a000000" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#fff"
        android:orientation="vertical" >

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#f4f4f6"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/cancelBtn"
                android:layout_width="60dp"
                android:layout_height="28dp"
                android:layout_above="@id/registerBtn"
                android:layout_gravity="left"
                android:layout_marginLeft="@dimen/comm_margin"
                android:layout_marginRight="@dimen/comm_margin"
                android:text="取消"
                android:background="@drawable/button_select_bg"
                android:textColor="#1b90fb"
                android:textSize="14sp" />

            <Button
                android:id="@+id/confirmBtn"
                android:layout_width="60dp"
                android:layout_height="28dp"
                android:layout_above="@id/registerBtn"
                android:layout_gravity="right"
                android:layout_marginLeft="@dimen/comm_margin"
                android:layout_marginRight="@dimen/comm_margin"
                android:background="@drawable/button_select_bg"
                android:text="确定"
                android:textColor="#1b90fb"
                android:textSize="14sp" />
        </FrameLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.6dp"
            android:background="#cccccc" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <com.studentloan.white.mode.view.wheel.WheelView
                android:id="@+id/wheelView"
                android:layout_width="match_parent"
                android:layout_height="220dp"
                android:cacheColorHint="#00000000"
                android:divider="@null"
                android:scrollbars="none" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/datepickerview" />
        </FrameLayout>
    </LinearLayout>

</RelativeLayout>