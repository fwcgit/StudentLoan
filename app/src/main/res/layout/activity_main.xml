<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="${relativePackage}.${activityClass}"
    android:fitsSystemWindows="true"
    android:background="@color/window_bg"
    >

    <LinearLayout
        android:id="@+id/homeLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/layoutButtom"
        android:orientation="vertical" >
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutButtom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#fff"
        android:orientation="horizontal"
        android:paddingBottom="6dp"
        android:paddingTop="6dp" >

        <LinearLayout
            android:id="@+id/speedLoanLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/homeImg"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/icon_home_select" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="2dp"
                android:text="首页"
                android:textColor="@color/home_select"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/huigouLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/huigouImg"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/icon_huigou_normal" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="2dp"
                android:text="回购"
                android:textColor="@color/home_normal"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/personalLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/persionImg"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/icon_personal_center_normal" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="2dp"
                android:text="个人中心"
                android:textColor="@color/home_normal"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/moreLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/moreImg"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/icon_more_normal" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="2dp"
                android:text="更多"
                android:textColor="@color/home_normal"
                android:textSize="14sp" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>