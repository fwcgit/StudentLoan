<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#7a000000" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginLeft="@dimen/comm_margin"
        android:layout_marginRight="@dimen/comm_margin"
        android:background="@drawable/shape_rect_write_bg"
        android:orientation="vertical" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:layout_marginTop="16dp"
            android:gravity="center"
            android:text="消息提醒"
            android:textColor="#333333"
            android:textSize="16sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.6dp"
            android:background="#cccccc" />

        <TextView
            android:id="@+id/msgTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:gravity="left"
            android:text="消息提醒"
            android:textColor="#333333"
            android:maxLength = "100"
            android:textSize="14sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.6dp"
            android:background="#cccccc" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:layout_marginTop="16dp"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/cancelBtn"
                android:layout_width="60dp"
                android:layout_height="28dp"
                android:layout_above="@id/registerBtn"
                android:layout_gravity="left"
                android:layout_marginLeft="@dimen/comm_margin"
                android:layout_marginRight="@dimen/comm_margin"
                android:background="@drawable/button_circular_bg"
                android:text="取消"
                android:textColor="#333333"
                android:textSize="14sp" />

            <Button
                android:id="@+id/confirmBtn"
                android:layout_width="60dp"
                android:layout_height="28dp"
                android:layout_above="@id/registerBtn"
                android:layout_gravity="right"
                android:layout_marginLeft="@dimen/comm_margin"
                android:layout_marginRight="@dimen/comm_margin"
                android:background="@drawable/button_circular_bg"
                android:text="查看"
                android:textColor="#333333"
                android:textSize="14sp" />
        </FrameLayout>
    </LinearLayout>

</RelativeLayout>